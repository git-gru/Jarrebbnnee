<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:id="@+id/tvC1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Form"
                android:textColor="@color/mainHeading"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/round_corner_full_border"
                android:padding="7dp">

                <EditText
                    android:id="@+id/etC1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Name"
                    android:textColor="@color/productTitle"
                    android:textColorHint="@color/productTitle"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/round_corner_full_border"
                android:padding="7dp">

                <EditText
                    android:id="@+id/etC2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Email Address"
                    android:textColor="@color/productTitle"
                    android:textColorHint="@color/productTitle"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/round_corner_full_border"
                android:padding="7dp">

                <EditText
                    android:id="@+id/etC3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Phone"
                    android:textColor="@color/productTitle"
                    android:textColorHint="@color/productTitle"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/round_corner_full_border"
                android:padding="7dp">

                <EditText
                    android:id="@+id/etC4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Subject"
                    android:textColor="@color/productTitle"
                    android:textColorHint="@color/productTitle"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:background="@drawable/round_corner_full_border"
                android:padding="7dp">

                <EditText
                    android:id="@+id/etC5"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/transparent"
                    android:gravity="top"
                    android:hint="Message"
                    android:textColor="@color/productTitle"
                    android:textColorHint="@color/productTitle"
                    android:textSize="12sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:background="@color/colorPrimary"
                android:text="SEND"
                android:textColor="@android:color/white"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/tvC2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow Us"
                android:textColor="@color/mainHeading"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:padding="7dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/fb_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/gplus_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/tw_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvC3"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Details"
                android:textColor="@color/mainHeading"
                android:textSize="14sp" />
            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="5dp"
                android:shape="rectangle">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="7dp">
                    
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_red_call"/>
                    <TextView
                        android:id="@+id/tvC4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:textColor="@color/productTitle"
                        android:textSize="12sp"
                        android:text="0000 000 0000"/>
                    
                </LinearLayout>
                
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
